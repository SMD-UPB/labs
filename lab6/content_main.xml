<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity"
        tools:showIn="@layout/activity_main"
                android:paddingLeft="@dimen/margin_padding">

    <EditText
            android:id="@+id/urlEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insert_url"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="30dp"/>

    <Button
            android:id="@+id/downloadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/urlEditText"
            android:layout_marginTop="@dimen/inter_component_padding"
            android:text="@string/download"/>

    <Button
            android:id="@+id/loadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/urlEditText"
            android:layout_toRightOf="@+id/downloadButton"
            android:layout_marginTop="@dimen/inter_component_padding"
            android:text="@string/show_image"/>


    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loadButton"
            android:layout_marginTop="@dimen/inter_component_padding"
            tools:srcCompat="@tools:sample/avatars"/>

</RelativeLayout>